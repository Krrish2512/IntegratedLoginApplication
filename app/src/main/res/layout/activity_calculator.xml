<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="#290205"
    android:outlineAmbientShadowColor="@color/cardview_dark_background"
    tools:context=".Calculator"
    android:padding="10dp">
    <TextView
        android:id="@+id/mbishan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simple Calculator"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/tvInput"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/rectangle_border"
        android:textSize="48sp"
        android:maxLength="50"
        android:padding="10dp"
        android:textColor="@color/white"
        android:gravity="right|center_vertical|bottom"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        ><Button
        android:id="@+id/btn1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="1"
        android:onClick="onDigit"
        android:textSize="30sp"
        android:backgroundTint="#28282B"
        android:padding="2dp"/>
        <Button
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#28282B"
            android:text="2"
            android:textSize="30sp"
            android:onClick="onDigit"
            android:padding="2dp"/>
        <Button
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="30sp"
            android:backgroundTint="#28282B"
            android:text="3"
            android:onClick="onDigit"
            android:padding="2dp"/>
        <Button
            android:id="@+id/btnplus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="30sp"
            android:textColor="#FF5733"
            android:backgroundTint="#28282B"
            android:text="+"
            android:onClick="onOperator"
            android:padding="2dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        ><Button
        android:id="@+id/btn4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="30sp"
        android:text="4"
        android:backgroundTint="#28282B"
        android:onClick="onDigit"
        android:padding="2dp"/>
        <Button
            android:id="@+id/btn5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="30sp"
            android:backgroundTint="#28282B"
            android:text="5"
            android:onClick="onDigit"
            android:padding="2dp"/>
        <Button
            android:id="@+id/btn6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#28282B"
            android:textSize="30sp"
            android:text="6"
            android:onClick="onDigit"
            android:padding="2dp"/>
        <Button
            android:id="@+id/btnmius"
            android:layout_width="0dp"
            android:textSize="30sp"
            android:textColor="#FF5733"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#28282B"
            android:text="-"
            android:onClick="onOperator"
            android:padding="2dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        ><Button
        android:id="@+id/btn7"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:backgroundTint="#28282B"
        android:textSize="30sp"
        android:text="7"
        android:onClick="onDigit"
        android:padding="2dp"/>
        <Button
            android:id="@+id/btn8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#28282B"
            android:text="8"
            android:textSize="30sp"
            android:onClick="onDigit"
            android:padding="2dp"/>
        <Button
            android:id="@+id/btn9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:backgroundTint="#28282B"
            android:layout_weight="1"
            android:text="9"
            android:onClick="onDigit"
            android:padding="2dp"/>
        <Button
            android:id="@+id/btndivide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:textColor="#FF5733"
            android:layout_weight="1"
            android:text="/"
            android:backgroundTint="#28282B"
            android:onClick="onOperator"
            android:padding="2dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        ><Button
        android:id="@+id/btndec"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="30sp"
        android:textColor="#FF5733"
        android:text="."
        android:backgroundTint="#28282B"
        android:onClick="ondecimalpoint"
        android:padding="2dp"/>
        <Button
            android:id="@+id/btn0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="#28282B"
            android:textSize="30sp"
            android:layout_weight="1"
            android:text="0"
            android:onClick="onDigit"
            android:padding="2dp"/>
        <Button
            android:id="@+id/btnclr"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text=" âŒ«"
            android:textSize="25sp"
            android:textColor="#FF5733"
            android:onClick="onClear"
            android:backgroundTint="#28282B"
            android:padding="2dp"/>
        <Button
            android:id="@+id/btnmultiply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:textColor="#FF5733"
            android:layout_weight="1"
            android:backgroundTint="#28282B"
            android:text="*"
            android:onClick="onOperator"
            android:padding="2dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >


        <TextView
            android:id="@+id/made_byy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#28282B"
            android:textColor="#FF5733"
            android:textSize="20sp"
            android:text="@string/linktosite"
            android:gravity="center_horizontal|center_vertical"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnequal"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:backgroundTint="#28282B"
            android:onClick="onEqual"
            android:text="="
            android:textColor="#FF5733"
            android:textSize="30sp"></Button>


    </LinearLayout>


</LinearLayout>